#!/bin/bash

HOST=$1

if [[ -z $HOST ]]; then
  echo Usage: $0 hostname
  exit 1
fi

if ! pidof ssh-agent > /dev/null; then
  eval `ssh-agent`
  ssh-add
fi

if [[ "x$2" != "x-d" ]]; then
  echo forking...
  ( $0 $HOST -d < /dev/null > /dev/null 2>&1 & )
  exit
fi

while sleep 1; do
  ssh $HOST tail -n0 --follow=name -f .irssi/fnotify |
    while read -r ; do
      notify-send -t 10 "$REPLY"
    done
done
